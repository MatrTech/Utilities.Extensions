<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net5.0;netcoreapp3.1</TargetFrameworks>
    <RootNamespace>MatrTech.Utilities.Extensions.Common</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <OutputPath>..\..\..\local-packages</OutputPath>
    <Nullable>enable</Nullable>
    <OutputType>Library</OutputType>

    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
 
    <MajorVersion>0</MajorVersion>
    <MinorVersion>0</MinorVersion>
    <PatchVersion>1</PatchVersion>
    <BuildVersion>$([System.DateTime]::Now.ToString("yyMMdd"))$([System.DateTime]::Now.ToString("HHmm"))</BuildVersion>
    <Version>$(MajorVersion).$(MinorVersion).$(PatchVersion).$(BuildVersion)</Version>

  </PropertyGroup>

</Project>
